<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">Edit Profile</h2>
    
    <%= form_with model: @user, url: profile_path, method: :patch, local: true, 
                  class: "space-y-6",
                  data: { 
                    controller: "profile-photo bio-counter geolocation",
                    profile_photo_max_size_value: "5242880"
                  } do |f| %>
      
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@user.errors.count, "error") %> prohibited your profile from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Account Information Section -->
      <div class="border-b pb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Account Information</h3>
        
        <div class="space-y-4">
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                required: true %>
            <% unless @user.email_verified? %>
              <p class="text-sm text-yellow-600 mt-1">Email not verified. <%= link_to "Resend verification", new_email_verification_request_path, class: "underline" %></p>
            <% end %>
          </div>
          
          <div>
            <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :username, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
      </div>

      <!-- Profile Photo Section -->
      <div class="border-b pb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Profile Photo</h3>
        
        <div class="flex items-center space-x-6">
          <div class="shrink-0">
            <% if @user.profile_photo.attached? %>
              <%= image_tag @user.profile_photo, 
                  class: "h-20 w-20 object-cover rounded-full",
                  data: { profile_photo_target: "preview" } %>
            <% else %>
              <div class="h-20 w-20 rounded-full bg-gray-200 flex items-center justify-center" 
                   data-profile-photo-target="preview">
                <svg class="h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            <% end %>
          </div>
          
          <div class="flex-1">
            <%= f.label :profile_photo, "Upload new photo", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.file_field :profile_photo, 
                accept: "image/*",
                data: { 
                  profile_photo_target: "input",
                  action: "change->profile-photo#preview"
                },
                class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
            <p class="mt-1 text-xs text-gray-500">JPG, PNG, GIF up to 5MB</p>
            <p class="mt-1 text-xs text-red-600 hidden" data-profile-photo-target="error"></p>
          </div>
        </div>
      </div>

      <!-- Bio Section -->
      <div class="border-b pb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">About You</h3>
        
        <div>
          <%= f.label :bio, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :bio, 
              rows: 4,
              placeholder: "Tell us a bit about yourself...",
              data: { 
                bio_counter_target: "input",
                action: "input->bio-counter#updateCount"
              },
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <p class="text-xs text-gray-500 mt-1">
            <span data-bio-counter-target="count"><%= @user.bio&.length || 0 %></span> / 500 characters
          </p>
        </div>
      </div>

      <!-- Location Section -->
      <div class="border-b pb-6">
        <h3 class="text-lg font-semibold text-gray-700 mb-4">Location</h3>
        
        <div class="space-y-4">
          <!-- Location detection button -->
          <div class="text-center mb-4">
            <button type="button" 
                    data-geolocation-target="detectButton"
                    data-action="click->geolocation#detect"
                    class="hidden bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 font-medium">
              Use My Current Location
            </button>
            <p data-geolocation-target="status" class="hidden text-sm mt-2"></p>
          </div>
          
          <div>
            <%= f.label :location_name, "Location Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :location_name, 
                placeholder: "e.g., San Francisco, CA",
                data: { geolocation_target: "locationName" },
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          </div>
          
          <!-- Hidden latitude and longitude fields -->
          <%= f.hidden_field :latitude, data: { geolocation_target: "latitude" } %>
          <%= f.hidden_field :longitude, data: { geolocation_target: "longitude" } %>
          
          <div class="flex items-center">
            <%= f.check_box :location_private, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :location_private, "Keep my location private", class: "ml-2 block text-sm text-gray-700" %>
            <p class="text-xs text-gray-500 ml-2">(Your location won't be visible to other users)</p>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center justify-between pt-4">
        <%= link_to "Cancel", dashboard_path, 
            class: "text-gray-600 hover:text-gray-800 font-medium" %>
        <%= f.submit "Save Changes", 
            class: "bg-blue-600 text-white py-2 px-6 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 font-medium" %>
      </div>
    <% end %>
  </div>
</div>