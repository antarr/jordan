<div class="max-w-md mx-auto">
  <div class="bg-white shadow-md rounded-lg px-8 pt-6 pb-8 mb-4">
    <!-- Progress indicator -->
    <div class="mb-8">
      <div class="flex items-center justify-between text-sm text-gray-500 mb-2">
        <span>Step <%= step_number %> of 5</span>
        <span><%= step_name %></span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-blue-600 h-2 rounded-full" style="width: <%= (step_number / 5.0 * 100).round %>%"></div>
      </div>
    </div>

    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Add Your Profile Photo</h2>
    <p class="text-gray-600 text-center mb-6">Upload a photo or provide a URL to complete your profile</p>
    
    <%= form_with model: @user, url: registration_step_path, method: :patch, local: true, class: "space-y-4", html: { data: { controller: "profile-photo" } } do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Profile photo preview -->
      <div class="flex justify-center mb-6">
        <div class="w-32 h-32 bg-gray-200 rounded-full flex items-center justify-center border-4 border-gray-300" data-profile-photo-target="preview">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </div>
      </div>

      <div>
        <%= f.label :profile_photo, "Profile Photo URL", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.url_field :profile_photo, 
            placeholder: "https://example.com/your-photo.jpg",
            autofocus: true,
            data: { "profile-photo-target": "input", action: "input->profile-photo#updatePreview" },
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <p class="text-sm text-gray-500 mt-1">Enter a URL to an image, or skip this step for now</p>
      </div>

      <div class="flex space-x-3">
        <%= link_to "Back", previous_wizard_path, 
            class: "flex-1 bg-gray-300 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200 font-medium text-center" %>
        <%= f.submit "Complete Registration", 
            class: "flex-1 bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition duration-200 font-medium" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to "Skip for now", registration_step_path, method: :patch, 
          class: "text-sm text-gray-500 hover:text-gray-700" %>
    </div>
  </div>
</div>