<!-- Main Content -->
<main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <% if current_user && !current_user.email_verified? %>
      <div class="mb-6 rounded-md bg-yellow-50 p-4" data-testid="email-verification-warning">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Your email address is not verified</h3>
            <div class="mt-2 text-sm text-yellow-700">
              <p>Please check your email to verify your account. <%= link_to 'Resend verification email', new_email_verification_request_path, class: 'font-medium underline text-yellow-700 hover:text-yellow-600' %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <div class="border-4 border-dashed border-gray-200 rounded-lg h-96">
      <div class="flex items-center justify-center h-full">
        <div class="text-center">
          <p class="text-gray-600">Welcome to your dashboard</p>
        </div>
      </div>
    </div>
  </div>
</main>